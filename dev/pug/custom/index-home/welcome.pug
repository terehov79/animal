.menu-full
  .container
    .row 
      - for (var i=0; i<16; i++)
        .col-xl-3.col-lg-6.mb-4
          a(href="#")
            .block 
              .__info
                p= servicesInfo[i]
              .__serv
                p= numServices[i]
                  span услуг
                +icon('vector' + i)

.mini-history--wrap
  .container
    .mini-history
      .__company
        h3 История компании
